{
  "swagger": "2.0",
  "info": {
    "description": "This is a message api which can list, retrieve, update, delete message(s)",
    "version": "1.0.0",
    "title": "Message API",
    "contact": {
      "email": "jiangqi.li@outlook.com"
    }
  },
  "host": "localhost:8080",
  "basePath": "/v1",
  "tags": [
    {
      "name": "Message"
    }
  ],
  "schemes": [
    "http"
  ],
  "paths": {
    "/messages": {
      "post": {
        "tags": [
          "Message"
        ],
        "summary": "Add a new message to the system",
        "description": "",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "message",
            "description": "The message to create.",
            "schema": {
              "type": "object",
              "required": [
                "body"
              ],
              "properties": {
                "body": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "responses": {
          "400": {
            "description": "Bad Request"
          }
        }
      },
      "get": {
        "tags": [
          "Message"
        ],
        "summary": "List all messages",
        "description": "",
        "operationId": "updatePet",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "query",
            "name": "page",
            "type": "integer",
            "description": "The number of current page. Start from 1 if provided"
          },
          {
            "in": "query",
            "name": "size",
            "type": "integer",
            "description": "The numbers of items to return (current page size)."
          }
        ],
        "responses": {
          "200": {
            "description": "return array of message if not provided the page number"
          },
          "200 - pagination": {
            "description": "return pagination object"
          }
        }
      }
    },
    "/messages/{_id}": {
      "get": {
        "tags": [
          "Message"
        ],
        "summary": "Find message by ID",
        "description": "Returns a single message",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "_id",
            "in": "path",
            "description": "ID of message to return",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "$ref": "#/definitions/Message"
            }
          },
          "400": {
            "description": "Invalid ID supplied"
          },
          "404": {
            "description": "Message not found"
          }
        }
      },
      "put": {
        "tags": [
          "Message"
        ],
        "summary": "Update an existing message",
        "description": "",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "_id",
            "in": "path",
            "description": "ID of message that needs to be updated",
            "required": true,
            "type": "string"
          },
          {
            "in": "body",
            "name": "message",
            "description": "The message to update.",
            "schema": {
              "type": "object",
              "required": [
                "body"
              ],
              "properties": {
                "body": {
                  "type": "string"
                },
                "status": {
                  "type": "string",
                  "enum": [
                    "Active",
                    "Inactive"
                  ]
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "updated or not"
          },
          "400": {
            "description": "Bad Request"
          }
        }
      },
      "delete": {
        "tags": [
          "Message"
        ],
        "summary": "Deletes a message",
        "description": "",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "_id",
            "in": "path",
            "description": "Message id to delete",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "deleted or not"
          },
          "400": {
            "description": "Invalid ID supplied"
          }
        }
      }
    }
  },
  "definitions": {
    "Message": {
      "type": "object",
      "required": [
        "body"
      ],
      "properties": {
        "body": {
          "type": "string",
          "example": "message test"
        },
        "isPalindrome": {
          "type": "boolean",
          "example": "false"
        },
        "status": {
          "type": "string",
          "description": "message status in the system",
          "enum": [
            "Active",
            "Inactive"
          ]
        },
        "createdAt": {
          "type": "string"
        },
        "modifiedAt": {
          "type": "string"
        }
      }
    }
  }
}